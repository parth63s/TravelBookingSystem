<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col">
        <br>
        <h3>Create a New Listing</h3>
        <form class="mb-2" method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-3">
                <lable for="title" class="form-label">Title</lable>
                <input name="listing[title]"  placeholder="Add a catcchy title" type="text" class="form-control" required>
                <div class="valid-feedback">Tital looks good </div>
            </div>

            <div class="mb-3">
                <lable for="description" class="form-label">Description</lable>
                <textarea name="listing[description]"  class="form-control" required></textarea>
                <div class="invalid-feedback">please enter short description</div>

            </div>

            <div class="mb-3">
                <lable for="image" class="form-label">Upload Listing Image</lable>
                <input name="listing[image]"  type="file" class="form-control" required>
                
            </div>
            
            <div class="row">
                <div class="mb-3 col-md-4">
                    <lable for="price" class="form-label">Price</lable>
                    <input name="listing[price]" class="form-control" placeholder="1200" type="number" required>
                    <div class="invalid-feedback">Price should be valid price</div>

                </div>
            
                <div class="mb-3 col-md-8">
                    <lable for="country" class="form-label">Country</lable>
                    <input name="listing[country]" class="form-control" placeholder="India" type="text" required>
                    <div class="invalid-feedback">please enter the country</div>

                </div>
            </div>
            

            <div class="mb-3">
                <lable for="location" class="form-label">Location</lable>
                <input name="listing[location]" class="form-control" placeholder="Jaipur, Rajasthan" type="text" required>
                <div class="invalid-feedback">please enter the location</div>

            </div>

            <button class="btn btn-dark add-btn mt-3">Submit</button>
            
        </form>
    </div>
</div>
