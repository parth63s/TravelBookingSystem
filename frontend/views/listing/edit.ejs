<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-12 col-md-12">

        <h3>Edit your Listing</h3>

        <form class="mb-2" method="post" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-3"> 
                <lable for="title" class="form-label">Title</lable>
                <input name="listing[title]" class="form-control" value="<%= listing.title %>"  type="text" required>
                <div class="invalid-feedback">Tital looks good </div>

            </div>
            <div class="mb-3">
                <lable for="description" class="form-label">Description</lable>
                <textarea name="listing[description]" class="form-control" required><%=listing.description%></textarea>
                <div class="invalid-feedback">please enter short description</div>

            </div>

            <div class="mb-3">
                Original listing image
                <img src="<%= originalImage %>">
            </div>

            <div class="mb-3">
                <lable for="image" class="form-label">Upload New Image</lable>
                <input name="listing[image]" class="form-control" type="file" >
                <div class="invalid-feedback">please enter a valid Link for Image</div>

            </div>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <lable for="price" class="form-label">Price</lable>
                    <input name="listing[price]" class="form-control" value="<%= listing.price %>" type="number" required>
                    <div class="invalid-feedback">Price should be valid price</div>

                </div>
                <div class="mb-3 col-md-8" >
                    <lable for="country" class="form-label">Country</lable>
                    <input name="listing[country]" class="form-control" value="<%= listing.country %>" type="text" required>
                    <div class="invalid-feedback">please enter the country</div>

                </div>
            </div>
           
            <div class="mb-3">
                <lable for="location" class="form-label">Location</lable>
                <input name="listing[location]" class="form-control" value="<%= listing.location %>" type="text" required>
                <div class="invalid-feedback">please enter location</div>

            </div>

            <button class="btn btn-dark edit-btn mt-3">Edit</button>
            
        </form>
    </div>
</div>
<script src="/js/script.js"></script>